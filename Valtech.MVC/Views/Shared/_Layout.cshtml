<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/base")
</head>
<body>
    @Html.Partial("_Header")

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @if (Request.RawUrl != HttpRuntime.AppDomainAppVirtualPath && Request.RawUrl != HttpRuntime.AppDomainAppVirtualPath + "/")
    {
        @Scripts.Render(GlobalConfig.GetBundleNameByUrl(Request.RawUrl))
    }
    else
    {
        @Scripts.Render(GlobalConfig.GetBundleNameByUrl("/Home/Index"))
    }
    @RenderSection("scripts", required: false)
</body>
</html>
